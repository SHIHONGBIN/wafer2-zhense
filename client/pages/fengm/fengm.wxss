.title{text-align: left;vertical-align: middle;position: relative; overflow: hidden; padding-left: 10px;color:#74b9ca; border-bottom: solid 1px #74b9ca; margin: 0 0 5px 0; padding: 5px 10px;  font-size: 16px;}
.text{ display: inline-block;vertical-align: middle;}
.text-icon{height:0; width: 0; border: solid 5px rgba(0,0,0,0); border-left: solid 8px #74b9ca; display: inline-block;vertical-align: middle; animation: iconanimate 2s infinite .5s;}
@keyframes iconanimate{
  0% {transform:  rotateX(0) ; perspective: 500px;}
  10% {transform:  rotateX(0) ; perspective: 500px;}
  90% {transform:  rotateX(360deg) ; perspective: 500px;}
  100% {transform:rotateX(360deg); perspective: 500px; }
}
.line{display: inline-block;height: 2rpx;overflow: hidden;background-color: #ddd; width:36.5vw;vertical-align: middle;}
.table-title{display: flex;border-top: solid 1px rgba(155,213,234,.4);color:#333; height: 30px; line-height: 30px; margin-top: -1px; font-size: 12px; margin: 0 10px; border-left: solid 1px rgba(155,213,234,.4);border-right: solid 1px rgba(155,213,234,.4)}
.title1{color:#74b9ca; font-weight: bold}
.title2{ height: 44px; line-height: 44px;padding-top: 4px}
.table-title .text1:first-child{color:#74b9ca; font-weight: bold}

.table-title .text1{flex:1; font-size: 14px; text-align: center;}
.table-title image{max-width: 100%; height: 40px;width: 40px; border-radius: 19px;box-shadow: 2px 2px 3px rgba(0,0,0,.2)}
.sub-title{ font-size: 14px;padding-left: 15px;padding-bottom: 5px; border: solid 1px rgba(155,213,234,.4); padding: 0 5px; display: inline-block;margin-left: 10px; border-top-left-radius: 4px;border-top-right-radius: 4px; background-color: #74b9ca; color:#fff}
.table1 .title3:nth-child(6){ border-bottom: solid 1px rgba(155,213,234,.4); border-bottom-left-radius: 4px;border-bottom-right-radius: 4px;}
.table1 .title1{border-top-right-radius: 4px;}
.notice-box{margin: 5px 10px 0 10px; color:#666;padding-bottom: 10px;}
.notice{text-align: left;display: flex; font-size: 0;width: 100%; position: relative}
.notice .text{  vertical-align: top; font-size: 12px; display: inline-block;}
.notice .text text{ display: block;} 
.notice .text:first-child{ color:red;padding-right: 0; width: 40px}
.fm-box{ padding-bottom: 50px;}
.table-title:nth-child(odd){ background-color: rgba(155,213,234,.1)}